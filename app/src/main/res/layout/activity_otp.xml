<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity"
    android:background="@drawable/bbg"
    android:id="@+id/rl">

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:id="@+id/otp"
        >

        <EditText
            android:id="@+id/login_otp_et"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Enter Received OTP"
            android:inputType="number"
            android:textColor="#FFffff"
            android:typeface="serif"
            android:textSize="25sp" />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="180dp"
        android:layout_below="@id/otp">

        <Button
            android:id="@+id/login_verifyOTP_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:text="Verify OTP"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:typeface="serif"
            android:elevation="1dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:elevation="2dp"
            android:layout_alignTop="@+id/login_verifyOTP_btn"
            android:layout_alignBottom="@+id/login_verifyOTP_btn"
            android:layout_alignLeft="@+id/login_verifyOTP_btn"
            android:layout_alignRight="@+id/login_verifyOTP_btn"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="#0091EA"
            android:visibility="gone" />

    </RelativeLayout>




</RelativeLayout>